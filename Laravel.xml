<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="Laravel">
  <template name="text" value="{{ Form::label('$LABEL$') }}&#10;{{ Form::text('$NAME$') }}" description="Quick create form" toReformat="true" toShortenFQNames="true">
    <variable name="LABEL" expression="capitalize(String)" defaultValue="" alwaysStopAt="true" />
    <variable name="NAME" expression="snakeCase(LABEL)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
      <option name="XSL_TEXT" value="false" />
      <option name="XML" value="false" />
      <option name="SQL" value="false" />
      <option name="JSP" value="false" />
      <option name="CSS_PROPERTY_VALUE" value="false" />
      <option name="CSS_DECLARATION_BLOCK" value="false" />
      <option name="CSS_RULESET_LIST" value="false" />
      <option name="CSS" value="false" />
      <option name="CUCUMBER_FEATURE_FILE" value="false" />
      <option name="JAVA_SCRIPT" value="false" />
      <option name="TypeScript" value="false" />
      <option name="CoffeeScript" value="false" />
      <option name="PHP" value="true" />
      <option name="HAML" value="false" />
      <option name="OTHER" value="true" />
    </context>
  </template>
</templateSet>

